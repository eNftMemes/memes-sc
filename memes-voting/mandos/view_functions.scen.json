      "expect": {
        "out": [
          "3"
        ],
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "currentPeriodMemeSecond",
      "tx": {
        "to": "sc:voting_contract",
        "function": "current_period_meme",
        "arguments": ["2"]
      },
      "expect": {
        "out": [
          "4"
        ],
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "periodLength",
      "tx": {
        "to": "sc:voting_contract",
