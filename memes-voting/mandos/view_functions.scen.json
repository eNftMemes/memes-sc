        ]
      },
      "expect": {
        "out": [
          "1"
        ],
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "oldPeriodMemeSecond",
      "tx": {
        "to": "sc:voting_contract",
        "function": "period_meme",
        "arguments": [
          "123,000",
          "2"
        ]
      },
      "expect": {
        "out": [
          "2"
        ],
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "currentPeriod",
      "tx": {
        "to": "sc:voting_contract",
        "function": "current_period",
        "arguments": []
      },
      "expect": {
        "out": ["727,800"],
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "periods",
      "tx": {
        "to": "sc:voting_contract",
        "function": "periods",
        "arguments": []
      },
      "expect": {
        "out": ["123,000", "727,800"],
        "status": "0"
      }
