        "arguments": ["123,000"]
      },
      "expect": {
        "out": ["2"],
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "oldPeriodMemeFirst",
      "tx": {
        "to": "sc:voting_contract",
