{
  "name": "voting deployment test",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "address:my_address": {
          "nonce": "0",
          "balance": "1,000,000",
          "storage": {}
        },
        "address:creator_contract": {
          "nonce": "0",
          "balance": "0",
          "owner": "address:my_address"
        },
        "address:auction_contract": {
          "nonce": "0",
          "balance": "0",
          "owner": "address:my_address"
        }
      },
      "newAddresses": [
        {
          "creatorAddress": "address:my_address",
          "creatorNonce": "0",
          "newAddress": "sc:voting_contract"
        }
      ]
    },
    {
      "step": "setState",
      "currentBlockInfo": {
        "blockTimestamp": "122,000"
      }
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "address:my_address",
        "contractCode": "file:../output/memes-voting.wasm",
        "value": "0",
        "arguments": [
          "address:creator_contract",
          "123,000"
        ],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "status": "0",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "checkState",
      "accounts": {
        "address:my_address": {
          "nonce": "1",
          "balance": "1,000,000",
          "storage": {}
        },
        "address:creator_contract": {
          "nonce": "0",
          "balance": "0",
          "owner": "address:my_address"
        },
        "address:auction_contract": {
          "nonce": "0",
          "balance": "0",
          "owner": "address:my_address"
        },
        "sc:voting_contract": {
          "nonce": "0",
          "balance": "0",
          "storage": {
            "str:creatorContract": "address:creator_contract",
            "str:periods.len": "1",
            "str:periods.item|u32:1": "123,000",
            "str:periodMemes.len": "0"
          },
          "code": "file:../output/memes-voting.wasm"
        }
      }
    },
    {
      "step": "scCall",
      "txId": "set-auction-sc",
      "tx": {
        "from": "address:my_address",
        "to": "sc:voting_contract",
        "function": "set_auction_sc",
        "arguments": [
          "address:auction_contract"
        ],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "out": [],
        "status": "0",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "checkState",
      "accounts": {
        "address:my_address": {
          "nonce": "2",
          "balance": "1,000,000",
          "storage": {}
        },
        "address:creator_contract": {
          "nonce": "0",
          "balance": "0",
          "owner": "address:my_address"
        },
        "address:auction_contract": {
          "nonce": "0",
          "balance": "0",
          "owner": "address:my_address"
        },
        "sc:voting_contract": {
          "nonce": "0",
          "balance": "0",
          "storage": {
            "str:creatorContract": "address:creator_contract",
            "str:auctionSc": "address:auction_contract",
            "str:periods.len": "1",
            "str:periods.item|u32:1": "123,000",
            "str:periodMemes.len": "0"
          },
          "code": "file:../output/memes-voting.wasm"
        }
      }
    },
    {
      "step": "scCall",
      "txId": "set-auction-sc-error",
      "tx": {
        "from": "address:creator_contract",
        "to": "sc:voting_contract",
        "function": "set_auction_sc",
        "arguments": ["address:auction_contract"],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "status": "4",
        "message": "str:Endpoint can only be called by owner",
        "gas": "*",
        "refund": "*"
      }
    }
  ]
}